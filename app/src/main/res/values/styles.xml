<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorBlack</item>
    </style>
    <style name="CustomSearchStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>  <!-- 设置字体大小为 14sp -->
        <item name="android:textColor">#FF999999</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="searchIcon">@mipmap/searchicon</item>
    </style>
    <style name="MyProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_rotate</item>
    </style>

</resources>
