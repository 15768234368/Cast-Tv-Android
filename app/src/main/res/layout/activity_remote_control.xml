<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_settingTop"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/iv_close_homepage"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:src="@mipmap/close_homepage_act" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="105dp"
                    android:text="@string/Remote"
                    android:textColor="#FF202020"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/iv_disconnect_homepage"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_below="@id/ll_settingTop"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@mipmap/disconnect_homepage" />

            <View
                android:id="@+id/view_disconnect_coverBlack10"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_below="@id/ll_settingTop"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_disconnect_coverblack10"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/ll_select_device"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_alignTop="@id/iv_disconnect_homepage"
                android:layout_alignEnd="@id/ll_channel_homepage"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@id/iv_disconnect_homepage"
                android:background="@drawable/shape_select_device">

                <ImageButton
                    android:id="@+id/iv_deviceIcon_homepage"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:background="@mipmap/device_icon" />

                <TextView
                    android:id="@+id/tv_select_device_homepage"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toStartOf="@id/iv_isConnected"
                    android:layout_toEndOf="@id/iv_deviceIcon_homepage"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/Select_device"
                    android:textColor="#FF202020"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_isConnected"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@mipmap/no_connected" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_keyboard_homepage"
                android:layout_width="157dp"
                android:layout_height="52dp"
                android:layout_below="@id/iv_disconnect_homepage"
                android:layout_alignStart="@id/iv_disconnect_homepage"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_keyboard"
                android:gravity="center">

                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@mipmap/keyboard_homepage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="12dp"
                    android:text="@string/Keyboard"
                    android:textColor="#FF202020"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:id="@+id/view_keyboard_coverBlack10"
                android:layout_width="157dp"
                android:layout_height="52dp"
                android:layout_below="@id/iv_disconnect_homepage"
                android:layout_alignStart="@id/iv_disconnect_homepage"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_keyboard_coverblack10"
                android:gravity="center"
                android:visibility="invisible">

            </View>

            <LinearLayout
                android:id="@+id/ll_channel_homepage"
                android:layout_width="157dp"
                android:layout_height="52dp"
                android:layout_below="@id/iv_disconnect_homepage"
                android:layout_alignTop="@id/ll_keyboard_homepage"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@id/ll_keyboard_homepage"
                android:background="@drawable/shape_keyboard"
                android:gravity="center">

                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@mipmap/channel_homepage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="12dp"
                    android:text="@string/Channels"
                    android:textColor="#FF202020"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:id="@+id/view_channel_coverBlack10"
                android:layout_width="157dp"
                android:layout_height="52dp"
                android:layout_below="@id/iv_disconnect_homepage"
                android:layout_alignTop="@id/ll_keyboard_homepage"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@id/ll_keyboard_homepage"
                android:background="@drawable/shape_keyboard_coverblack10"
                android:gravity="center"
                android:visibility="invisible">

            </View>

            <RelativeLayout
                android:id="@+id/rl_disc"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/ll_keyboard_homepage"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_disc">

                <ImageButton
                    android:id="@+id/iv_left_homepage"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="18dp"
                    android:background="@mipmap/left" />

                <ImageButton
                    android:id="@+id/iv_up_homepage"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:background="@mipmap/up" />

                <ImageButton
                    android:id="@+id/iv_right_homepage"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="18dp"
                    android:background="@mipmap/right" />

                <ImageButton
                    android:id="@+id/iv_down_homepage"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="18dp"
                    android:background="@mipmap/down" />

                <ImageButton
                    android:id="@+id/iv_ok_homepage"
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ok_key" />

                <View
                    android:id="@+id/view_ok_coverBlack10"
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    android:layout_centerInParent="true"
                    android:visibility="invisible"
                    android:background="@drawable/shape_disconnect_coverblack10" />

            </RelativeLayout>

            <ImageButton
                android:id="@+id/iv_back_homepage"
                android:layout_width="73dp"
                android:layout_height="52dp"
                android:layout_below="@id/ll_keyboard_homepage"
                android:layout_alignStart="@id/ll_keyboard_homepage"
                android:layout_marginTop="230dp"
                android:src="@mipmap/back_homepage" />

            <View
                android:id="@+id/view_back_coverBlack10"
                android:layout_width="73dp"
                android:layout_height="52dp"
                android:layout_below="@id/ll_keyboard_homepage"
                android:layout_alignStart="@id/ll_keyboard_homepage"
                android:layout_marginTop="230dp"
                android:background="@drawable/shape_press_coverblack10"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/iv_home_homepage"
                android:layout_width="73dp"
                android:layout_height="52dp"
                android:layout_alignTop="@id/iv_back_homepage"
                android:layout_alignEnd="@id/ll_channel_homepage"
                android:src="@mipmap/home_homepage" />

            <View
                android:id="@+id/view_home_coverBlack10"
                android:layout_width="73dp"
                android:layout_height="52dp"
                android:layout_alignTop="@id/iv_back_homepage"
                android:layout_alignEnd="@id/ll_channel_homepage"
                android:background="@drawable/shape_press_coverblack10"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/ll_operationTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_back_homepage"
                android:layout_alignStart="@id/iv_back_homepage"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/iv_rewind_homepage"
                    android:layout_width="73dp"
                    android:layout_height="52dp"
                    android:src="@mipmap/rewind_homepage" />

                <View
                    android:id="@+id/view_rewind_coverBlack10"
                    android:layout_width="73dp"
                    android:layout_height="52dp"
                    android:background="@drawable/shape_press_coverblack10"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/iv_play_pause_homepage"
                    android:layout_width="73dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/iv_rewind_homepage"
                    android:src="@mipmap/play_pause_homepage" />

                <View
                    android:id="@+id/view_play_pause_coverBlack10"
                    android:layout_width="73dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/iv_rewind_homepage"
                    android:background="@drawable/shape_press_coverblack10"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/iv_forward_homepage"
                    android:layout_width="73dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/iv_play_pause_homepage"
                    android:src="@mipmap/forward_homepage" />

                <View
                    android:id="@+id/view_forward_coverBlack10"
                    android:layout_width="73dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/iv_play_pause_homepage"
                    android:background="@drawable/shape_press_coverblack10"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/iv_backspace_homepage"
                    android:layout_width="73dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/iv_forward_homepage"
                    android:src="@mipmap/refresh_homepage" />

                <View
                    android:id="@+id/view_backspace_coverBlack10"
                    android:layout_width="73dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/iv_forward_homepage"
                    android:background="@drawable/shape_press_coverblack10"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_operationBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_operationTop"
                android:layout_alignStart="@id/iv_back_homepage"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/iv_menu_homepage"
                    android:layout_width="73dp"
                    android:layout_height="52dp"
                    android:src="@mipmap/menu_homepage" />

                <View
                    android:id="@+id/view_menu_coverBlack10"
                    android:layout_width="73dp"
                    android:layout_height="52dp"
                    android:background="@drawable/shape_press_coverblack10"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/iv_volume_down_homepage"
                    android:layout_width="73dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/iv_menu_homepage"
                    android:src="@mipmap/volume_down_homepage" />

                <View
                    android:id="@+id/view_volume_down_coverBlack10"
                    android:layout_width="73dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/iv_menu_homepage"
                    android:background="@drawable/shape_press_coverblack10"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/iv_volume_mute_homepage"
                    android:layout_width="73dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/iv_volume_down_homepage"
                    android:src="@mipmap/volume_mute_homepage" />

                <View
                    android:id="@+id/view_volume_mute_coverBlack10"
                    android:layout_width="73dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/iv_volume_down_homepage"
                    android:background="@drawable/shape_press_coverblack10"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/iv_volume_up_homepage"
                    android:layout_width="73dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/iv_volume_mute_homepage"
                    android:src="@mipmap/volume_up_homepage" />

                <View
                    android:id="@+id/view_volume_up_coverBlack10"
                    android:layout_width="73dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/iv_volume_mute_homepage"
                    android:background="@drawable/shape_press_coverblack10"
                    android:visibility="invisible" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

    <View
        android:id="@+id/view_coverBlack80"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="invisible" />
    <LinearLayout
        android:id="@+id/ll_keyboard_edit_homepage"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_keyboard_edit_homepage"
            android:layout_width="272dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/shape_keyboard_editbg"
            android:hint="@string/Please_enter_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColorHint="#FF999999"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_keyboard_edit_homepage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@mipmap/retract_keyboard_homepage" />

    </LinearLayout>
</RelativeLayout>